from telegram import KeyboardButton, ReplyKeyboardMarkup, InlineKeyboardButton, InlineKeyboardMarkup

def start(update, context):
    user_id = update.message.chat_id
    name = update.message.from_user.first_name
    a = [InlineKeyboardButton(text='RUğŸ‡·ğŸ‡º', callback_data='russian_version'),
         InlineKeyboardButton(text='UZğŸ‡ºğŸ‡¿', callback_data='uzbek_version')]
    context.bot.send_message(chat_id = user_id, text='Ğ’Ñ‹Ğ±ĞµÑ€Ğ¸Ñ‚Ğµ ÑĞ·Ñ‹Ğº', reply_markup=InlineKeyboardMarkup([a]))
def uzbek_version(update, context):
    user_id = update.callback_query.from_user.id
    name = update.callback_query.from_user.first_name
    x = [InlineKeyboardButton(text='Ishga ariza', callback_data='qabul_uz'),
         InlineKeyboardButton(text='Faqat suhbatlashmoqchiman', callback_data='idi_uz')]
    context.bot.send_message(chat_id = user_id, text='Salom {} Men sizga qanday yordam bera olaman ğŸ¤—'.format(name), reply_markup=InlineKeyboardMarkup([x]))
